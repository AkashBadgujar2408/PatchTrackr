@{
    ViewData["Title"] = "500 - Internal Server Error";
    if (!CommonService.IsUserLoggedIn())
    {
        Layout = null;
        <partial name="_CssPartial" />
    }
}

<div class="container d-flex flex-column justify-content-center align-items-center vh-100 text-center">

    <div>
        <h1 class="display-1 fw-bold text-warning">500</h1>

        <h2 class="fw-semibold mb-3">Something Went Wrong</h2>

        <p class="text-muted fs-5 mb-4">
            An internal server has occurred.
            If you are seeing this page, please notify our team to resolve the issue.
        </p>

        <div class="mt-4">
            <a href="javascript:history.back()" class="text-decoration-none btn btn-outline-warning btn-lg px-4">
                <i class="bi bi-arrow-left"></i> Go Back
            </a>
        </div>

        <div class="mt-4">
            <a href="javascript:location.reload()" class="text-decoration-none">
                <i class="bi bi-arrow-clockwise"></i> Try Again
            </a>
        </div>
    </div>

</div>