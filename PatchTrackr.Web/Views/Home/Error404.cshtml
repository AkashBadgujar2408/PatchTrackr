@{
    ViewData["Title"] = "404 - Page Not Found";
    if (!CommonService.IsUserLoggedIn())
    {
        Layout = null;
        <partial name="_CssPartial" />
    }
}

<div class="container d-flex flex-column justify-content-center align-items-center vh-100 text-center">

    <div>
        <h1 class="display-1 fw-bold text-danger">404</h1>

        <h2 class="fw-semibold mb-3">Oops! Page Not Found</h2>

        <p class="text-muted fs-5 mb-4">
            The page you're looking for doesn't exist or may have been moved.
        </p>

        <div class="mt-4">
            <a href="javascript:history.back()" class="text-decoration-none btn btn-outline-warning btn-lg px-4">
                <i class="bi bi-arrow-left"></i> Go Back
            </a>
        </div>
    </div>

</div>
